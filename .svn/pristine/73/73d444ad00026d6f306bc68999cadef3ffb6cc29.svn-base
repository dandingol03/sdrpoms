/*导航*/
.ex_main_content_header_right{
    width: 763px;
    height: 72px;
   /*  background: url(/sdrpoms/resources/image/exhibition/ex_main_content_header_rightbg.png) no-repeat; */
    background-size: 100% 100%;
    float: left;
    font-size: 20px;
    position: absolute;
    right: 38px;
    top: 21px;
    z-index: 99;
}
.ex_main_content_header_rightul{
	width: 540px;
    margin: 45px 140px;
    height: 57px;
    line-height: 57px;
}
 .ex_main_content_header_right ul li{
	width: 170px;
	height: 57px;
	float: left;
	background: none;
	font-size: 20px;
	line-height: 57px;
	color: #fff;
	text-align: center;
	cursor: pointer;
	box-sizing:border-box;
	/* border:1px solid red; */
	/* background:url(../../image/exhibition/ex_main_contentrightlibg.png.png) right 10px top 25px no-repeat ; */
}
.ex_main_content_header_right ul li div{
	width: 170px;
	height: 57px;
	background:url(../../image/exhibition/ex_main_contentrightlibg.png) no-repeat ;
	background-size:100% 100%;
	
}
.ex_main_content_header_right ul li ul li{
	float:left;
	font-size:16px;
	width:120px;
}

.ex_main_content_header_right ul li ul{
	display:none;
	z-index:9999;
	position:relative;
	background:url(../../image/exhibition/ex_main_contentright_ulbg.png);
	background-size: 100% 100%;
	border:2px solid #0aceee;
	width:500px;
	height:200px;
	margin:0px 12px;
}
